### SwayWM settings ###

### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term kitty
set $menu rofi -show drun

### Input
input type:keyboard {
    xkb_layout us
    xkb_variant intl
    xkb_numlock enabled
}

input type:pointer {
    accel_profile flat
}

input type:touchpad {
    natural_scroll enabled
    tap enabled
}

### Floating windows
for_window [title="nmtui"] floating enable
for_window [title="gnome-calculator"] floating enable

### Idling
exec swayidle -w \
     timeout 300 'swaylock -f -c 000000' \
     timeout 360 'swaymsg "output * power off"' \
     resume 'swaymsg "output * power on"'

### Status Bar
bar {
    swaybar_command waybar
}

### Include
include config.d/*
include autostart
include bindings
include appearance/*
# include swayfx
