## Input
input type:keyboard {
    # xkb_layout us
    xkb_layout br
    # xkb_variant intl
    xkb_numlock enabled
}

input type:pointer {
    accel_profile flat
}

input type:touchpad {
    natural_scroll enabled
    tap enabled
}

## Window rules
for_window {
    [app_id="org.gnome.Calculator"] floating enable
}

## Idling
exec swayidle -w \
     timeout 300 'swaylock -f -c 000000' \
     timeout 360 'swaymsg "output * power off"' \
     resume 'swaymsg "output * power on"'

## Status Bar
bar {
    swaybar_command waybar
}

### Include
include config.d/*
include autostart
include bindings
include appearance/*
# include swayfx
